<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Resume Builder</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="/css/personal_info.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" 
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lexend:wght@100;200;300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body class="d-flex flex-column justify-content-between " style=" font-family: 'Lexend', sans-serif">
    <!-- start header -->
    <nav class="navbar navbar-expand-md navbar-light border-bottom position-fixed top-0 start-0 end-0 ">
        <div class="container-lg ">
          <img src="/img/Resume.jpg" class="image" id="logo">
          <div class="row pipeline position-relative ">
            <span class="line"></span>
            <div class="stage col d-flex flex-column justify-content-center align-items-center fs-6"
                 data-after-content="1">
              <div class="circle circle-active rounded-circle border  d-flex justify-content-center align-items-center">
                <i class="bi bi-file-earmark-person d-flex justify-content-center align-items-center"></i>
              </div>
              <span class="stage-label mt-1 span-active" >Per.Info</span>
            </div>
            <div class="stage col d-flex flex-column justify-content-center align-items-center fs-6"
                 data-after-content="2">
              <div class="circle circle-active rounded-circle border  d-flex justify-content-center align-items-center">
                <i class="bi bi-archive d-flex justify-content-center align-items-center"></i>
              </div>
              <span class="stage-label mt-1 span-active" >Experiecne</span>
            </div>
            <div class="stage col d-flex flex-column justify-content-center align-items-center fs-6"
                 data-after-content="3">
              <div class="circle  rounded-circle border  d-flex justify-content-center align-items-center">
                <i class="bi bi-building d-flex justify-content-center align-items-center"></i>
              </div>
              <span class="stage-label mt-1" >Education</span>
            </div>
            <div class="stage col d-flex flex-column justify-content-center align-items-center fs-6"
                 data-after-content="4">
              <div class="circle  rounded-circle border  d-flex justify-content-center align-items-center">
                <i class="bi bi-bar-chart d-flex justify-content-center align-items-center"></i>
              </div>
              <span class="stage-label mt-1" >Skills</span>
            </div>
            <div class="stage col d-flex flex-column justify-content-center align-items-center fs-6"
                 data-after-content="5">
              <div class="circle  rounded-circle border  d-flex justify-content-center align-items-center">
                <i class="bi bi-brightness-alt-high d-flex justify-content-center align-items-center"></i>
              </div>
              <span class="stage-label mt-1" >Summary</span>
            </div>
            <div class="stage col d-flex flex-column justify-content-center align-items-center fs-6"
                 data-after-content="6">
              <div class="circle  rounded-circle border  d-flex justify-content-center align-items-center">
                <i class="bi bi-cloud-download d-flex justify-content-center align-items-center"></i>
              </div>
              <span class="stage-label mt-1" >Download</span>
            </div>
          </div>
        </div>
    </nav>
    <!-- end header -->

    <!-- start body -->
      <div class="content pt-5 ">
        <div class="container-md">
          <form action="/experience/<%= id %>" method="post">
            <div class="row mt-4">
                <input type="text" name="id" <% if(typeof exp!== 'undefined'){%>   value=<%=exp.id%> <% } %> hidden>
                <div class="mb-4 col-12">
                  <h3>EXPERIENCE</h3>
                  <p>List your work experience, from the most recent to the oldest. Feel free to use our pre-written examples.</p>
                </div>
                <div class="col-md-6">
                  <label for="EmployerInput" class="form-label">Employer</label>
                  <input type="text" class="form-control" name="employer" <% if(typeof exp!== 'undefined'){%>   value=<%=exp.employer%> <% } %> id="EmployerInput" placeholder="Enter Employer" required>
                </div>
                <div class="col-md-6">
                  <label for="JobTitleInput" class="form-label">Job title</label>
                  <input type="text" class="form-control" name="jobTitle" <% if(typeof exp!== 'undefined'){%>   value=<%=exp.jobTitle%> <% } %> id="JobTitleInput" placeholder="Enter Job title" required>
                </div>
    
                <div class="mt-4 col-md-6">
                  <label for="CityInput" class="form-label">City</label>
                  <input type="text" class="form-control" name="city" <% if(typeof exp!== 'undefined'){%>   value=<%=exp.city%> <% } %> id="CityInput" placeholder="Enter City" required>
                </div>
    
                <div class="mt-4 col-md-6">
                  <label for="CountryInput" class="form-label">Country</label>
                  <input type="text" class="form-control" name="country" <% if(typeof exp!== 'undefined'){%>   value=<%=exp.country%> <% } %> id="CountryInput" placeholder="Enter Country" required>
                </div>
    
                <div class="mt-4 col-md-6">
                  <label for="StartdateInput" class="form-label">Start date</label>
                  <input type="date" class="form-control" name="startDate" <% if(typeof exp!== 'undefined'){%>   value=<%=exp.startDate%> <% } %> id="StartdateInput" placeholder="Enter Start date" required>
                </div>
                <div class="mt-4 col-md-6">
                  <label for="EnddateInput" class="form-label">End date</label>
                  <input type="date" class="form-control" name="endDate" <% if(typeof exp!== 'undefined'){%>   value=<%=exp.endDate%> <% } %> id="EnddateInput" placeholder="Enter End date" required>
                </div>
    
                <div class="mt-4 col-12">
                  <label for="descriptionInput" class="form-label">Job Description</label>
                  <textarea class="form-control" name="jobDescription" id="descriptionInput" rows="3" placeholder="Enter description" required><% if(typeof exp!== 'undefined'){%>  <%=exp.jobDescription%> <% } %></textarea>
                </div>
                <div class="mt-4 col-12 buttons d-flex justify-content-between">
                  <button class="btn btn-secondary"  type="button"><a href="/personal_info/back/<%= id %>" class="list-group-item list-group-item-action pencil-trash" style="color: white;">Back</a></button>
                  <button class="btn btn-primary" type="submit">Save & Next</button>
                </div>
              </div>
          </form>
        </div>
      </div>
    <!-- end body -->

    <!-- start footer -->
    <div class="footer container-md mt-2">
      <footer class="d-flex flex-wrap justify-content-between align-items-center py-3 my-2 border-top">
        <div class="col-md-4 d-flex align-items-center">
          <a href="/" class="mb-3 me-2 mb-md-0 text-muted text-decoration-none lh-1">
            <svg class="bi" width="30" height="24"><use xlink:href="#bootstrap"></use></svg>
          </a>
          <span class="mb-3 mb-md-0 text-muted">Â© 2022 Company, Inc</span>
        </div>

        <ul class="nav col-md-4 justify-content-end list-unstyled d-flex">
          <li class="ms-3"><a class="text-muted" href="#"><i class="bi bi-twitter"></i></a></li>
          <li class="ms-3"><a class="text-muted" href="#"><i class="bi bi-instagram"></i></a></li>
          <li class="ms-3"><a class="text-muted" href="#"><i class="bi bi-facebook"></i></a></li>
        </ul>
      </footer>
    </div>
    <!-- end footer -->
    <script>
      let myFunction = ()=>{
      let circle_size = parseFloat($( ".circle" ).eq(0).css('width'));
      let navHeight = parseFloat($("nav").css('height'));

      $("body").css("padding-top", navHeight)

      $( ".circle" ).each(function( index ) {
        $( this ).css('height', circle_size)
        
      });
      
      $(".line").css({top: circle_size/2});
    }
    $().ready(myFunction)
    $( window ).on( "resize", myFunction );

    document.addEventListener('DOMContentLoaded', function() {
      var navImage = document.getElementById('logo');

      navImage.addEventListener('click', function() {
        var linkToOpen = document.createElement('a');
        linkToOpen.setAttribute('href', '/')

        linkToOpen.click();
      });
    });
    </script>
</body>
</html>