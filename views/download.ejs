<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Resume Builder</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="/css/personal_info.css">
    <link rel="stylesheet" href="/css/download.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" 
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lexend:wght@100;200;300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body class="d-flex flex-column justify-content-between " style=" font-family: 'Lexend', sans-serif">
    <!-- start header -->
    <nav class="navbar navbar-expand-md navbar-light border-bottom position-fixed top-0 start-0 end-0 ">
      <div class="container-lg ">
        <img src="/img/Resume.jpg" class="image" id="logo">
        <div class="row pipeline position-relative ">
          <span class="line" style="background-color: #54AFF8;"></span>
          <div class="stage col d-flex flex-column justify-content-center align-items-center fs-6"
               data-after-content="1">
            <div class="circle circle-active rounded-circle border  d-flex justify-content-center align-items-center">
              <i class="bi bi-file-earmark-person d-flex justify-content-center align-items-center"></i>
            </div>
            <span class="stage-label mt-1 span-active" >Per.Info</span>
          </div>
          <div class="stage col d-flex flex-column justify-content-center align-items-center fs-6"
               data-after-content="2">
            <div class="circle circle-active rounded-circle border  d-flex justify-content-center align-items-center">
              <i class="bi bi-archive d-flex justify-content-center align-items-center"></i>
            </div>
            <span class="stage-label mt-1 span-active" >Experiecne</span>
          </div>
          <div class="stage col d-flex flex-column justify-content-center align-items-center fs-6"
               data-after-content="3">
            <div class="circle circle-active rounded-circle border  d-flex justify-content-center align-items-center">
              <i class="bi bi-building d-flex justify-content-center align-items-center"></i>
            </div>
            <span class="stage-label mt-1 span-active" >Education</span>
          </div>
          <div class="stage col d-flex flex-column justify-content-center align-items-center fs-6"
               data-after-content="4">
            <div class="circle circle-active rounded-circle border  d-flex justify-content-center align-items-center">
              <i class="bi bi-bar-chart d-flex justify-content-center align-items-center"></i>
            </div>
            <span class="stage-label mt-1 span-active" >Skills</span>
          </div>
          <div class="stage col d-flex flex-column justify-content-center align-items-center fs-6"
               data-after-content="5">
            <div class="circle circle-active rounded-circle border  d-flex justify-content-center align-items-center">
              <i class="bi bi-brightness-alt-high d-flex justify-content-center align-items-center"></i>
            </div>
            <span class="stage-label mt-1 span-active" >Summary</span>
          </div>
          <div class="stage col d-flex flex-column justify-content-center align-items-center fs-6"
               data-after-content="6">
            <div class="circle circle-active rounded-circle border  d-flex justify-content-center align-items-center">
              <i class="bi bi-cloud-download d-flex justify-content-center align-items-center"></i>
            </div>
            <span class="stage-label mt-1 span-active" >Download</span>
          </div>
        </div>
      </div>
  </nav>
    <!-- end header -->

    <!-- start body -->
      <div class="content pt-5 ">
        <div class="container-md">
            <div class="my-4 w-100 head  justify-content-between">
                <h3>REVIEW & DOWNLOAD</h3>
                <div>
                  <button class="btn btn-light me-3"  type="button"><a href="/summary/<%= id %>" class="list-group-item list-group-item-action pencil-trash" >Back</a></button>
                  <button class="btn btn-primary" onclick = "window.print()">download</button>
                </div>
            </div>
          <div class="row mt-4 cv shadow px-2 py-4">
            
            <div class="col-7 col-md-8">
              <div class="mb-4 d-flex  align-items-center">
                <img style="max-height: 120px;" src="/uploads/<%= cv.personalInfo.filename %>" class="rounded d-block" alt="your image" id="image">
                <h3 class="ms-md-5 blue-color"><%= cv.personalInfo.firstName %> <%= cv.personalInfo.lastName %></h3>
              </div>
              <p><%= cv.summary.summary %></p>
            </div>
            <div class="col-5 col-md-4">
              <p class="blue-color" >Email</p>
              <p><%= cv.personalInfo.email %></p>

              <p class="blue-color">Address</p>
              <p><%= cv.personalInfo.address %>, <%= cv.personalInfo.city %> <%= cv.personalInfo.country %></p>
              <div class="d-flex justify-content-between">
                <div>
                  <p class="blue-color">Phone</p>
                  <p><%= cv.personalInfo.phone %></p>
                </div>
                <div>
                  <p class="blue-color">Zip Code</p>
                  <p><%= cv.personalInfo.zipCode %></p>
                </div>
              </div>
            </div>

            <div class="mt-4 pe-4 col-6">
              <h3 class="blue-color">Work experience</h3>
              <div class="experiences">
                <% for(let i=0; i< locals.cv.experiences.length; i++) {%>
                <div class="experience">
                  <h4><%= cv.experiences[i].jobTitle %></h4>
                  <div class="d-flex justify-content-between">
                    <span class="gris-color"><%= cv.experiences[i].startDate %></span>
                    <span class="gris-color"><%= cv.experiences[i].endDate %></span>
                  </div>
                  <div class="d-flex">
                    <span class="gris-color"><%= cv.experiences[i].city %>, </span>
                    <span class="ms-3 gris-color"><%= cv.experiences[i].country %></span>
                  </div>
                  <h6><%= cv.experiences[i].employer %></h6>
                  <p><%= cv.experiences[i].description %></p>
                </div>
                <% } %>
              </div>
            </div>

            <div class="mt-4 col-6">
              <h3 class="blue-color">Education & Learning</h3>
              <div class="educations">
                <% for(let i=0; i< locals.cv.educations.length; i++) {%>
                <div class="education">
                  <h4><%= cv.educations[i].degree %></h4>
                  <h6><%= cv.educations[i].schoolName %></h6>
                  <div class="d-flex justify-content-between">
                    <span class="gris-color"><%= cv.educations[i].graduationDate %></span>
                    <span class="gris-color"><%= cv.educations[i].fieldOfStudy %></span>
                  </div>
                  <div class="d-flex ">
                    <span class="gris-color"><%= cv.educations[i].city %>, </span>
                    <span class="ms-3 gris-color"><%= cv.educations[i].country %></span>
                  </div>
                </div>
                <% } %>
              </div>

              <h3 class="mt-3 blue-color">Skills</h3>
              <div class="skills">
                <% for(let i=0; i< locals.cv.skills.length; i++) {%>
                <div class="skill d-flex justify-content-between">
                  <span><%= cv.skills[i].skill %></span>
                  <span><%= cv.skills[i].level %></span>
                </div>
                <% } %>
              </div>

            </div>
          </div>
        </div>
      </div>
    <!-- end body -->

    <!-- start footer -->
    <div class="footer container-md mt-2">
      <footer class="head flex-wrap justify-content-between align-items-center py-3 my-2 border-top">
        <div class="col-md-4 d-flex align-items-center">
          <a href="/" class="mb-3 me-2 mb-md-0 text-muted text-decoration-none lh-1">
            <svg class="bi" width="30" height="24"><use xlink:href="#bootstrap"></use></svg>
          </a>
          <span class="mb-3 mb-md-0 text-muted">Â© 2022 Company, Inc</span>
        </div>

        <ul class="nav col-md-4 justify-content-end list-unstyled d-flex">
          <li class="ms-3"><a class="text-muted" href="#"><i class="bi bi-twitter"></i></a></li>
          <li class="ms-3"><a class="text-muted" href="#"><i class="bi bi-instagram"></i></a></li>
          <li class="ms-3"><a class="text-muted" href="#"><i class="bi bi-facebook"></i></a></li>
        </ul>
      </footer>
    </div>
    <!-- end footer -->
    <script>
      let myFunction = ()=>{
      let circle_size = parseFloat($( ".circle" ).eq(0).css('width'));
      let navHeight = parseFloat($("nav").css('height'));

      $("body").css("padding-top", navHeight)

      $( ".circle" ).each(function( index ) {
        $( this ).css('height', circle_size)
        
      });
      
      $(".line").css({top: circle_size/2});
    }
    $().ready(myFunction)
    $( window ).on( "resize", myFunction );

    document.addEventListener('DOMContentLoaded', function() {
      var navImage = document.getElementById('logo');

      navImage.addEventListener('click', function() {
        var linkToOpen = document.createElement('a');
        linkToOpen.setAttribute('href', '/')

        linkToOpen.click();
      });
    });
    </script>
</body>
</html>